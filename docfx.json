{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "images/dehr.png"
        ]
      },
      {
        "files": ["css/**"]
      }
    ],
    "output": "_site",
    
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "DEHR",
      "_enableSearch": true,
      "pdf": true,
      "_appLogoPath": "images/dehr.png"
    },
    "template": [
      "default",
      "modern"
    ],
    "styles": [
      "css/custom.css"
    ]    
  }
}